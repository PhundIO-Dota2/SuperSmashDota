<root>
  <styles>
    <include src="s2r://panorama/styles/dotastyles.vcss_c" />
    <include src="file://{resources}/styles/custom_game/hero_selection.css" />
    <include src="file://{resources}/styles/control_panel.css" />
  </styles>
  <scripts>
     <include src="file://{resources}/scripts/custom_game/hero_selection.js" />
  </scripts>
  
  <Panel class="Hero_Selection" hittest="true" visible="false">
    <Panel id="Hero_Selection_Main" class="Hero_Selection_Main" hittest="false">
      <Panel id="Hero_Selection_HeroBox" class="Hero_Selection_HeroBox" hittest="false">
        <Panel id="HeroPickContainerRow1" class="HeroPickContainerRow" hittest="false"> <!--94x71-->
          <DOTAHeroImage id="HeroPickpuck" class="heroImage" heroname="npc_dota_hero_puck" heroimagestyle="portrait" onactivate="selectedHeroPuck()"/>
          <DOTAHeroImage id="HeroPickrattletrap" class="heroImage" heroname="npc_dota_hero_rattletrap" heroimagestyle="portrait" onactivate="selectedHeroClock()"/>
          <DOTAHeroImage id="HeroPickzuus" class="heroImage" heroname="npc_dota_hero_zuus" heroimagestyle="portrait" onactivate="selectedHeroZuus()"/>
          
        </Panel>
        <Panel id="HeroPickContainerRow2" class="HeroPickContainerRow" hittest="false">
          <DOTAHeroImage id="HeroPickearthshaker" class="heroImage" heroname="npc_dota_hero_earthshaker" heroimagestyle="portrait" onactivate="selectedHeroEarthshaker()"/>
          <DOTAHeroImage id="HeroPickmirana" class="heroImage" heroname="npc_dota_hero_mirana" heroimagestyle="portrait" onactivate="selectedHeroMirana()"/>
          <DOTAHeroImage id="HeroPicklina" class="heroImage" heroname="npc_dota_hero_lina" heroimagestyle="portrait" onactivate="selectedHeroLina()"/>
          
        </Panel>
        
        <Panel id="HeroPickContainerRow3" class="HeroPickContainerRow" hittest="false"> 
          <DOTAHeroImage id="HeroPicktusk" class="heroImage" heroname="npc_dota_hero_tusk" heroimagestyle="portrait" onactivate="selectedHeroTusk()"/>
          <DOTAHeroImage id="HeroPicktinker" class="heroImage" heroname="npc_dota_hero_tinker" heroimagestyle="portrait" onactivate="selectedHeroTinker()"/>
          <DOTAHeroImage id="HeroPickrandom" class="heroImage" heroname="npc_dota_hero_wisp" heroimagestyle="portrait" onactivate="selectedHeroRandom()"/>
          
        </Panel>
        <!--
        <Panel id="HeroPickContainerRow4" class="HeroPickContainerRow" hittest="false">
          <DOTAHeroImage id="HeroPickPuck" class="heroImage" heroname="npc_dota_hero_puck" heroimagestyle="portrait"/>
          <DOTAHeroImage id="HeroPickClock" class="heroImage" heroname="npc_dota_hero_rattletrap" heroimagestyle="portrait"/>
          <DOTAHeroImage id="HeroPickZeus" class="heroImage" heroname="npc_dota_hero_zuus" heroimagestyle="portrait"/>
          <DOTAHeroImage id="HeroPickTusk" class="heroImage" heroname="npc_dota_hero_tusk" heroimagestyle="portrait"/>
        </Panel>-->
      </Panel>
      <Panel id="Hero_Selection_Abilities" class="Hero_Selection_Abilities" hittest="false">
        <DOTAHeroImage id="SelectedHero" class="SelectedHero" heroname="" heroimagestyle="portrait" onactivate="OnSelectedHeroClicked()"/>
        <Panel id="Hero_Selection_Abilities_Bar" class="Hero_Selection_Abilities_Bar" hittest="false">
          <DOTAAbilityImage id="special_top" class="abilityImage" abilityname="" onactivate="OnSpecialTopClicked()"/>
          <DOTAAbilityImage id="special_side" class="abilityImage" abilityname="" onactivate="OnSpecialSideClicked()"/>
          <DOTAAbilityImage id="special_mid" class="abilityImage" abilityname="" onactivate="OnSpecialMidClicked()"/>
          <DOTAAbilityImage id="special_bottom" class="abilityImage" abilityname="" onactivate="OnSpecialBottomClicked()"/>
        </Panel>
        <Panel id="TooltipBox" class="TooltipBox" hittest="false">
          <Label text=""/>
        </Panel>
        <Panel id="HeroRatingBox" class="HeroRatingBox" hittest="false">
          <Panel id="HeroRatingBoxInside" class="HeroRatingBoxInside" hittest="false">
            <Panel id="HeroRatingBoxLabels" class="HeroRatingBoxLabels" hittest="false">
              <Panel id="RatingAnimations" class="RatingTextBox" hittest="false">
                <Label text="Animations"/>
              </Panel>
              <Panel id="RatingDisables" class="RatingTextBox" hittest="false">
                <Label text="#Disables"/>
              </Panel>
              <Panel id="RatingCooldowns" class="RatingTextBox" hittest="false">
                <Label text="#Cooldowns"/>
              </Panel>
              <Panel id="RatingPush" class="RatingTextBox" hittest="false">
                <Label text="#Knockback"/>
              </Panel>
              <Panel id="RatingDamage" class="RatingTextBox" hittest="false">
                <Label text="#Damage"/>
              </Panel>
              <Panel id="RatingEvasiveness" class="RatingTextBox" hittest="false">
                <Label text="#Evasiveness"/>
              </Panel>
              <Panel id="RatingLikelyness" class="RatingTextBox" hittest="false">
                <Label text="#Likelyness"/>
              </Panel>
            </Panel>
            <Panel id="HeroRatingBoxRatings" class="HeroRatingBoxRatings" hittest="false">
              <Panel id="RatingBarAnimations" class="RatingBar" hittest="false">
                <Panel id="RatingScoreAnimations1" class="RatingPoints" hittest="false">
                </Panel>
                <Panel id="RatingScoreAnimations2" class="RatingPoints" hittest="false">
                </Panel>
                <Panel id="RatingScoreAnimations3" class="RatingPoints" hittest="false">
                </Panel>
              </Panel>
              <Panel id="RatingBarDisables" class="RatingBar" hittest="false">
                <Panel id="RatingScoreDisables1" class="RatingPoints" hittest="false">
                </Panel>
                <Panel id="RatingScoreDisables2" class="RatingPoints" hittest="false">
                </Panel>
                <Panel id="RatingScoreDisables3" class="RatingPoints" hittest="false">
                </Panel>
              </Panel>
              <Panel id="RatingBarCooldowns" class="RatingBar" hittest="false">
                <Panel id="RatingScoreCooldowns1" class="RatingPoints" hittest="false">
                </Panel>
                <Panel id="RatingScoreCooldowns2" class="RatingPoints" hittest="false">
                </Panel>
                <Panel id="RatingScoreCooldowns3" class="RatingPoints" hittest="false">
                </Panel>
              </Panel>
              <Panel id="RatingBarPush" class="RatingBar" hittest="false">
                <Panel id="RatingScorePush1" class="RatingPoints" hittest="false">
                </Panel>
                <Panel id="RatingScorePush2" class="RatingPoints" hittest="false">
                </Panel>
                <Panel id="RatingScorePush3" class="RatingPoints" hittest="false">
                </Panel>
              </Panel>
              <Panel id="RatingBarDamage" class="RatingBar" hittest="false">
                <Panel id="RatingScoreDamage1" class="RatingPoints" hittest="false">
                </Panel>
                <Panel id="RatingScoreDamage2" class="RatingPoints" hittest="false">
                </Panel>
                <Panel id="RatingScoreDamage3" class="RatingPoints" hittest="false">
                </Panel>
              </Panel>
              <Panel id="RatingBarEvasiveness" class="RatingBar" hittest="false">
                <Panel id="RatingScoreEvasiveness1" class="RatingPoints" hittest="false">
                </Panel>
                <Panel id="RatingScoreEvasiveness2" class="RatingPoints" hittest="false">
                </Panel>
                <Panel id="RatingScoreEvasiveness3" class="RatingPoints" hittest="false">
                </Panel>
              </Panel>
              <Panel id="RatingBarLikelyness" class="RatingBar" hittest="false">
                <Panel id="RatingScoreLikelyness1" class="RatingPoints" hittest="false">
                </Panel>
                <Panel id="RatingScoreLikelyness2" class="RatingPoints" hittest="false">
                </Panel>
                <Panel id="RatingScoreLikelyness3" class="RatingPoints" hittest="false">
                </Panel>
              </Panel>
            </Panel>
          </Panel>
        </Panel>
      </Panel>

    </Panel>
    <Button id="LockHero" class="LockHeroButton" onactivate="LockHeroAndReady()">
        <Label text="#custom_game_team_select_lock_start" />
    </Button>
  </Panel>
</root>


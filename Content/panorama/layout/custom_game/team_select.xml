 <!-- Built up with the 1v5 example from Noya-->
<root>
    <styles>
        <include src="file://{resources}/styles/dotastyles.css" />
        <include src="file://{resources}/styles/play.css" />
        <include src="file://{resources}/styles/custom_game/team_select.vcss_c" />
        <include src="file://{resources}/styles/custom_game/settings.css" />
    </styles>
    <scripts>
        <include src="file://{resources}/scripts/custom_game/team_select.js" />
        <include src="file://{resources}/scripts/settings.js" />
    </scripts>
    <Panel hittest="false" class="TeamSelect">
        <Panel id="Explanation" class="Explanation">
            <Label text="#Explanation_header" />
            <Label text="#Controls_movement"  />
            <Label text="#Controls_Attacking" />
            <Label text="#Controls_Spells" />
            <Panel id="" class="Example_Image">
                <Image class="ExampleImage" src="file://{images}/custom_game/loading_screen/example_controls.jpg" />
            </Panel>
            <Label text="#Goal_game" />
            <Label text="#Changelog"/>
        </Panel>
        <!-- Custom Host Settings Panel-->
         <Panel id="Settings">
            <Label class='SettingsHeader' text="GAME SETTINGS" style="" />
            
            <!-- <Panel class="EntryPanel">
                <Label class="OptionLabel" text="Starting Gold" />
                <TextEntry id="starting_gold" maxchars="5" text="3125" 
                    ontabbackward="SetStartingGold()" ontabforward="SetStartingGold()" oninputsubmit="SetStartingGold()"/>
            </Panel>-->

            <Panel class="EntryPanel">
                <Label class="OptionLabel" text="Number of rounds:" />
                <Panel class="ValuePanel">
                    <Label class="LabelEntry" id="nAmountOfRounds" text="5"/>
                    <Panel class="PlusMinus">
                        <Button class="Plus" onactivate="ValueChange('nAmountOfRounds', 1);">
                            <Label id="Plus" text="+"/>
                        </Button>
                        <Button class="Minus" onactivate="ValueChange('nAmountOfRounds', -1);">
                            <Label id="Minus" text="-"/>
                        </Button>
                    </Panel>
                </Panel>
            </Panel>

            <Panel class="EntryPanel">
                <Label class="OptionLabel" text="Starting Lifes:" />
                <Panel class="ValuePanel">
                    <Label class="LabelEntry" id="nStartingLives" text="0"/>
                    <Panel class="PlusMinus">
                        <Button class="Plus" onactivate="ValueChange('nStartingLives', 1);">
                            <Label id="Plus" text="+"/>
                        </Button>
                        <Button class="Minus" onactivate="ValueChange('nStartingLives', -1);">
                            <Label id="Minus" text="-"/>
                        </Button>
                    </Panel>
                </Panel>
            </Panel>
            
            <Panel id="RadioButtons">
                <Label class="OptionLabel" text="Gamemode:" />
                <Panel class="RadioSection">
                    <RadioButton group="Format" onactivate="SelectRadioGameMode('1')" id="tier1" text="Free for all" checked="true"/>
                </Panel>
                 <Panel class="RadioSection">
                    <RadioButton group="Format" onactivate="SelectRadioGameMode('2')" id="tier2" text="2 v 2" />
                </Panel>
            </Panel>  

            
            <Panel id="RadioButtons">
                <Label class="OptionLabel" text="Hero selection:" />
                <Panel class="RadioSection">
                    <RadioButton group="HeroSelection" onactivate="SelectRadioHeroSelection('1')" id="tier1" text="Normal" checked="true"/>
                </Panel>
                 <Panel class="RadioSection">
                    <RadioButton group="HeroSelection" onactivate="SelectRadioHeroSelection('2')" id="tier2" text="Random" />
                </Panel>
            </Panel> 
            <!--
            <Panel id="ToggleSettings">
                <Label class="OptionLabel" text="Duplicate options"/>
                <Panel id="duplicate_rounds ">
                    <ToggleButton id="duplicate_rounds" text="Allow duplicate heroes in the same round" onactivate="Toggle('duplicate_rounds')"/>
                </Panel>
                <Panel id="duplicate_player">
                    <ToggleButton id="duplicate_player" text="Allow players to play the same hero again" onactivate="Toggle('duplicate_player')"/>
                </Panel>
            </Panel>
            -->
            
            <!--<Panel id="RadioButtons">
                <Label class="OptionLabel" text="Map selection:" />
                <Panel class="RadioSection">
                    <RadioButton group="WinConditionRadio" onactivate="SelectRadioMapSelection('1')" id="tier1" text="Random" checked="true"/>
                </Panel>
                <Panel class="RadioSection">
                    <RadioButton group="WinConditionRadio" onactivate="SelectRadioMapSelection('2')" id="tier2" text="Loser picks" />
                </Panel>
                <Panel class="RadioSection">
                    <RadioButton group="WinConditionRadio" onactivate="SelectRadioMapSelection('2')" id="tier2" text="Winner picks" />
                </Panel>
                
            </Panel> -->

            <Label id="Host" text="" style="" />
        </Panel>
        
        <!-- Default UI -->
        <Panel hittest="false" id="TeamSelectContainer" selectionpos="auto">
            <!--Empty space to let the loading screen and chat be visible-->
            <Panel hittest="false" id="TeamsSelectEmptySpace" />

            <!--Teams List, left hand panel-->
            <Panel id="TeamsList" >
                <Panel id="TeamsListGroup" >
                    <Panel id="TeamListHeader">
                        <Label id="TeamListHeaderLabel" text="#custom_game_team_select" />
                        <Image id="TeamListLockedIcon" src="file://{images}/control_icons/lock_small.png" />
                    </Panel>
                    <Panel id="TeamsListRoot" />
                    <Button id="ShuffleTeamAssignmentButton" >
                        <Label text="#custom_game_team_select_shuffle" />
                        <Image src="file://{images}/control_icons/shuffle.psd" />
                    </Button>
                </Panel>
            </Panel>

            <!--Game Info and Unassigned players, right hand panel-->
            <Panel id="GameAndPlayersRoot">
                
                <Panel id="GameInfoPanel" >
                    
                    <!--Game mode and map
                    <Panel id="CustomGameModeName">
                        <Label id="GameModeNameLabel" text="#addon_game_name" />
                    </Panel>-->
                    <Panel id="MapInfo">
                        <Label id="MapInfoLabel" text="#LoadingScreenMapInfo" />
                    </Panel>
                    
                    <!--Countdown timer-->
                    <Panel id="StartGameCountdownTimer">
                        <Image id="TimerBg" src="file://{images}/status_icons/timer_background.psd" />
                        <Image id="TimerRing" src="file://{images}/status_icons/timer_ring.psd" />
                        <Label id="TeamSelectTimer" text="#custom_game_team_select_timer" />
                        <Panel id="TimerLabelBox" >
                            <Label id="TimerLabelAutoStart" text="#custom_game_team_select_auto_start" />
                            <Label id="TimerLabelGameStart" text="#custom_game_team_select_starting" />
                        </Panel>
                    </Panel>
                    
                </Panel>

                <!--Unassigned players-->
                <Panel id="UnassignedPlayerPanel" >
                    <Button id="UnassignedPlayersButton" >
                        <Panel id="UnassignedPlayersHeader">
                            <Label text="#custom_game_team_select_unassigned_players" />
                        </Panel>
                        <Panel id="UnassignedPlayersDivider" />
                        <Panel id="UnassignedPlayersContainer" />
                    </Button>       
                
                    <Button id="AutoAssignButton" >
                        <Image src="file://{images}/control_icons/double_arrow_left.png" />
                        <Label text="#custom_game_team_select_auto_assign" />
                    </Button>
                </Panel>
                
                <!--Start and lock button-->
                <Button id="LockAndStartButton" class="PlayButton" onactivate="OnLockAndStartPressed()">
                    <Label text="#custom_game_team_select_lock_start" />
                </Button>
                <Button id="CancelAndUnlockButton" class="PlayButton" onactivate="OnCancelAndUnlockPressed()">
                    <Label text="#custom_game_team_select_cancel_unlock" />
                </Button>
                
            </Panel>
        </Panel>
    </Panel>
</root>

